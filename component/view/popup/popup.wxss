
.popup-wrap{
  z-index: 1000;
  position: fixed;
  bottom: 0px;
  left: 0;
  right: 0;
  
  background-color: #fff;
  transition: transform 300ms;
}
.popup-wrap-active{
  transform: translateY(100%);
}

.mask{
  position: fixed;
   bottom: 0;
  right: 0; 
  top: 0;
  left: 0;  
  z-index: 999;
  transition: all 300ms;
}
.mask-active{
 background: rgba(0,0,0,0.5);
}