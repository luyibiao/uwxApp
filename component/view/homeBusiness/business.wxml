<view class="flex-array bg-white" wx:if="{{bizStyle == 1}}">
  <view class='flex-array-item text-center bussiness-item' wx:for="{{businessList}}" wx:key="{{item.id}}" bindtap='onSelectBus' data-item="{{item}}">
    <view class='bussiness-item-detail bg-white padd-t-b-tt border-box'>
      <view class='{{item.imgPath ? "bussiness-image" : "bussiness-image-clothes"}}'>
        <image src='{{item.imgPath || clothesImg}}' mode='aspectFit' ></image>
      </view>
      <view class='m-t ft-foten'>
        <view>{{item.showName ? item.name : ""}}</view>
        <view class='text-muted' wx:if="{{item.showSubtitle}}">{{item.subtitle}}</view>
      </view>
    </view>
  </view>
</view>

<view class="group" wx:else>
  <cell islink wx:for="{{businessList}}" wx:key="{{item.id}}" bindtap="onSelectBus" data-item="{{item}}">
    <view slot="title" class='flex-wrap'>
      <view class='{{item.imgPath ? "bussiness-image" : "bussiness-image-clothes"}} flex-item-center'>
        <image src="{{item.imgPath || clothesImg}}" mode="aspectFit" style='width: 150rpx'></image>
      </view>
      <view class='flex-item-center m-l'>
        <view>{{item.showName ? item.name : ""}}</view>
        <view wx:if="{{item.showSubtitle}}" class='text-muted'>{{item.subtitle}}</view>
      </view>
    </view>
  </cell>
</view>