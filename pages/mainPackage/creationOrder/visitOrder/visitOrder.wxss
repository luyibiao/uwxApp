 .btn-fotter{
   z-index: 1001;
   position: fixed;
   bottom: 0;
   left: 0;
   right: 0;
   display: flex;
   height:60px;
 }
 .btn-fotter_left{
   flex: 1;
   display: flex;
   justify-content: space-between;
   align-items: center;
 }
 .btn-fotter_right{
   flex: 2;
   display: flex;
   justify-content: space-between;
   align-items: center;
 }
 .detail-text{
   margin-right: 15px;
 }
.btn-fotter .icon{
   position: absolute;
   transform: rotate(-45deg);
   top: 25%;
   right: 0;
   transition: transform 300ms;
 }
 .btn-fotter .icon-roate{
   top: 0;
   transform: rotate(135deg)
 }

 .vip-btn-fotter{
    z-index:1001;
    position:fixed;
    left:0;
    right:0;
    display:flex;
    bottom:60px;
    height:20px;
    background-color:#fdecec;

 }