.exchange-custom{
  margin-top: 10px;
  margin-bottom: 20px;
}

.group-custom{
  position: relative;
  margin-bottom: 15px;
}
.group-custom:before {
  content: " ";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 8px;
  background: linear-gradient(rgba(255, 255, 255, 0) 40%, #ffffff 0) 0 0,
    radial-gradient(circle closest-corner, #ffffff 40%, rgba(255, 102, 0, 1) 0)
      0 0;
  background-size: 10px 10px;
  background-repeat: repeat;
}

.is-disabled{
  background: url(https://cdn.ukaocloud.cn/wxapp/icon/coupon_passed.png) no-repeat 98% 90%;
  background-size: 60px 60px;
}
.group-custom.is-disabled{
  border-color: rgb(221, 221, 221);
}

.group-custom.is-disabled:before {
  background: linear-gradient(rgba(255, 255, 255, 0) 40%, #ffffff 0) 0 0,
    radial-gradient(
        circle closest-corner,
        #ffffff 40%,
        rgba(221, 221, 221, 1) 0
      )
      0 0;
  background-size: 10px 10px;
  background-repeat: repeat;
}


