::-webkit-scrollbar{  
  width: 0;  
  height: 0; 
  color: transparent;  
} 
.sowing-map{
  position: relative;
  min-height: 50px;
  /* overflow: hidden; */
}
.swiper{
  height: 153px;
}
.swiper-item{
  display: inline-block;
  height: 100%;
}
.swiper-item view{
  width: 100%;
  height: 100%;
}
.swiper-item image{
  width: 100%;
}
.select-city{
  z-index: 2;
  display: flex;
  align-items: center;
  position: absolute;
  top: 10px;
  left: 50%;
  transform: translateX(-50%);
  padding: 7px 20px;
  border-radius: 15px;
  background: rgba(255, 255, 255, 0.5);
}
.u_arrow-down{
  display: inline-block;
  border-style: solid;
  border-width: 6px 5px 0px 5px;
  border-color: #000 transparent transparent transparent;
}


.root-order button{
  width: 38%;
  min-width: 120px;
  line-height: 38px;
  border-radius: 20px;
}

checkbox .wx-checkbox-input{
  transform: scale(0.7);
  background: transparent;
  border: 1px solid #888888;
}
/* 选中后的 背景样式 （红色背景 无边框 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked{
   background: #1aad19;
   border: 1px solid #1aad19;
}
/* 选中后的 对勾样式 （白色对勾 可根据UI需求自己修改） */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before{ 
   text-align: center;
   color:#fff; 
}
