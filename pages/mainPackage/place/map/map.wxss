page{
  overflow: hidden;
}
.wrap{
  padding-top: 40px;
  
  box-sizing: border-box;
}
.input-wrap{
  position: relative;
  width: 100%;
  border: 1px solid #e5e5e5;
}
.input-wrap input{
  flex: 85%;
  border: none;
  padding-left: 10px;
}
.search-text{
 flex: 15%;
 align-self: stretch;
 line-height: 45px;
 text-align: center;
}
.search-text:active{
  background-color: #98a6ad;
  color: #fff;
}
.search-btn-cover{
  margin-top: 7px;
  overflow: scroll
}
.search-cover-title{
  background-color: #fff;
  width:100%;
  font-size: 14px;
  padding: 0px 10px;
  line-height: 40px;
  box-sizing: border-box;
}
.bd-cordver-view{
  height: 1px;
  background-color: #e5e5e5 !important;
}
.clear-close{
  padding: 10px;
  box-sizing: border-box;
  font-size: 12px;
  background-color: #fff;
}
.map{
  height: 100%;
}
.address-tip{
  flex: 80%;
}
.address-btn{
  flex: 20%;
}
.address-btn button{
  background: #1d99f0;
  color: #fff;
  border-radius: 0px;
  font-size: 14px;
  line-height: 55px;
}
.address-btn button:active{
  opacity: .8
}

.tip-img{
 
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -10px;
  margin-top: -16px;
  width: 20px;
  height: 32px;
}

.custom-triangle{
  transform: rotate(45deg)
}

.loc-active:active{
  background-color: #ececec
}

.loc-certen{
  margin:0 auto 60px;
  width:98%
}

.loc-certen-button{
  margin: 0 auto;
   width:98%;
  
}

.loc-left-img{
  z-index:10;
  width:35px;
  height:35px;
  margin-bottom:150px;
  margin-left:20px;
}

.address_css{
  font-size: 12px;
  margin-left:10px;
  color:#e5e5e5;
  margin-bottom:10px;
  background-color:#fff;
  overflow:auto;
  word-wrap:break-all
}

.to_right_size{
  height:14.5px;
  width:8.5px;
  padding-bottom:6px;

}